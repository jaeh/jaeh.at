doctype html
html(lang='en')
  head
    meta(charset='utf-8')

    block title
      title jaeh.at - Jascha Ehrenreich

    link(rel='icon' href='/favicon.ico')
    meta(name='viewport' content='width=device-width, initial-scale=1')

    link(rel='stylesheet' href='/main.css')

    block meta
      meta(property='og:title' content=`${ FIRST_NAME } ${ LAST_NAME } - ${ JOB_DESCRIPTION }`)
      meta(property='og:image' content=`/img/jascha.ehrenreich.jpg`)
      meta(
        name='description'
        property='og:description'
        content=`${ DESCRIPTION && DESCRIPTION.join(' ') }`)

    block styles

  body
    article
      section.hero
        .image
          img.face(src=`/img/${ FIRST_NAME }.${ LAST_NAME }.jpg` role='presentation')
          img.body(src=`/img/${ FIRST_NAME }.${ LAST_NAME }.body.jpg` role='presentation')

        .text
          h1=`${ FIRST_NAME} ${ LAST_NAME }`

          h2=JOB_DESCRIPTION

          block hero-content

      block content

    block scripts
